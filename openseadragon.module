    'name' => 'OpenSeadragon plugin',
    'vendor url' => 'https://openseadragon.github.io/',
    'download url' => 'https://github.com/openseadragon/openseadragon/master/zipball',
    'version arguments' => [
      'file' => 'openseadragon.js',
      // //! openseadragon 2.2.1.
      'pattern' => '@openseadragon ([0-9\.-]+)@',
      'lines' => 1,
      'columns' => 50,
    ],
    'versions' => [
      '2.2.1' => [
        'files' => [
          'js' => [
            'openseadragon.js',
          ],
